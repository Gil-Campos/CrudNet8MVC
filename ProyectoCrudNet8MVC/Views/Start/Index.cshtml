@model IEnumerable<ProyectoCrudNet8MVC.Models.Contact>
@{
    ViewData["Title"] = "List of Contacts";
}

<h1 class="text-center">Contacts made with .NET 8 (.NET Core MVC)</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Create" asp-controller="Start" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i> New User
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>List of users</strong>
                </h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Any())
                    {
                        <table class="table table-bordered" id="tblUsers" width="100%">
                            <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Id)</th>
                                <th>@Html.DisplayNameFor(m => m.Name)</th>
                                <th>@Html.DisplayNameFor(m => m.Telephone)</th>
                                <th>@Html.DisplayNameFor(m => m.Cellphone)</th>
                                <th>@Html.DisplayNameFor(m => m.Email)</th>
                                <th>@Html.DisplayNameFor(m => m.CreationDate)</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Id)</td>
                                    <td>@Html.DisplayFor(m => item.Name)</td>
                                    <td>@Html.DisplayFor(m => item.Telephone)</td>
                                    <td>@Html.DisplayFor(m => item.Cellphone)</td>
                                    <td>@Html.DisplayFor(m => item.Email)</td>
                                    <td>@Html.DisplayFor(m => item.CreationDate)</td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                                        </a>
                                        <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@item.Id">
                                            <i class="fa fa-info-circle" aria-hidden="true"></i> Detail
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fa fa-eraser" aria-hidden="true"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No registry found</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>